                    </form>
                    {{#if_eq invitation.status "Active"}}
                    <div class="content d-flex justify-content-between">
                        <form action="/reviewer/rejectInvitation/{{invitation._id}}" method="post">
                            <div class="text-right"> <!-- text-right = text-align: right -->
                                <input class="btn btn-lg btn-danger" type="submit" value="Reject">
                            </div>
                        </form>
                        <form action="/reviewer/acceptInvitation/{{invitation._id}}" method="post">
                            <div class="text-right"> <!-- text-right = text-align: right -->
                                <input class="btn btn-lg btn-primary" type="submit" value="Accept">
                            </div>
                        </form>
                    </div>
                    {{else}}
                    {{/if_eq}}
                </div>
            </div>
        </div>
    </div>
</div>