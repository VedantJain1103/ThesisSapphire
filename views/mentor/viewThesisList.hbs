<div class="container-fluid">
    <div class="row  d-flex justify-content-between align-items-center">
        <div class="col">
            <div class="content d-flex justify-content-between align-items-center">
                <div>
                    {{name}}
                </div>
                <div>
                    <a href="/mentor/publish" class="btn btn-primary">Publish</a>
                </div>
            </div>
        </div>
    </div>
    <div class="row  d-flex justify-content-around align-items-center">
        <div class="col">
            <div class="content">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Thesis Name</th>
                            <th class="text-center">Scholar</th>
                            <th class="text-center">Submitted On</th>
                            <th class="text-center">Status</th>
                            <th class="text-center">Last Updated</th>
                            <th class="text-right">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each thesisList}}
                        <tr>
                            <td class="font-italic font-size-20">{{this.name}}</td>
                            <td class="text-center">
                                <div>{{this.scholarName}}</div>
                                <div>{{this.scholarEmail}}</div>
                            </td>
                            <td class="text-center">
                                {{this.submittedOn}}
                            </td>
                            {{#if this.rejectionReason}}
                            <td class="text-center text-danger">
                                {{this.status}}
                            </td>
                            {{else}}
                            <td class="text-center text-success">
                                {{this.status}}
                            </td>
                            {{/if}}
                            <td class="text-center">
                                {{this.statusUpdatedOn}}
                            </td>
                            <td class="text-right">
                                <a href="/mentor/viewThesis/{{this.thesisId}}" class="btn">View</a>
                                {{#if_eq this.status "Draft"}}
                                <a href="/mentor/thesis/submit/{{this.thesisId}}" class="btn">Submit</a>
                                {{/if_eq}}
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>